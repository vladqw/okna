<Application x:Class="Okna.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Okna"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="BtnMy" TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="Gold"/>
        </Style>
        <Style x:Key="BtnMyNew" TargetType="Button">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Background" Value="Pink"/>
        </Style>
        <Style x:Key="Txt" TargetType="TextBlock">
            <Setter Property="Width" Value="400"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="#FFDEFF48"/>
        </Style>

    </Application.Resources>
</Application>
